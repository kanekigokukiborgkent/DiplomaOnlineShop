@model User
@{
    ViewData["Title"] = "Logare";
}
<head>
    <link href='https://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/form.css" />
</head>

<div class=" container text-center">
    <div class="login-form-1  p-4 text-center m-5" style="background-color:rgba(20,20,20,0.6)">
        <h2 class="text-white">Logare ca admin</h2>

        <form id="login-form" class="text-left" novalidate="novalidate" asp-action="loghin" asp-controller="Home">
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <label asp-for="login" class="control-label">Login</label>
                        <input type="text" asp-for="login" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label">Parola</label>
                        <input type="text" asp-for="password" class="form-control" />
                    </div>
                    <button type="submit" class="login-button" style=""><i class="fa fa-chevron-right"></i></button>
                </div>
            </div>
        </form>

    </div>
</div>

